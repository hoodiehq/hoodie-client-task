{
  "name": "@hoodie/task-client",
  "description": "client api for asynchronous task queue, using PouchDB for sync",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist && mkdirp dist",
    "build": "browserify index.js --standalone=TaskQueue > dist/hoodie-task-client.js",
    "postbuild": "uglifyjs dist/hoodie-task-client.js -mc > dist/hoodie-task-client.min.js",
    "pretest": "standard",
    "test": "npm run -s test:node | tap-spec",
    "test:node": "node tests",
    "test:watch": "gaze 'clear && node tests | tap-min' 'tests/**/*.js' 'index.js' 'lib/**/*.js'",
    "test:coverage": "istanbul cover tests",
    "test:coverage:upload": "istanbul-coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hoodiehq/hoodie-task-client.git"
  },
  "keywords": [
    "hoodie",
    "task",
    "couchdb",
    "pouchdb"
  ],
  "author": "The Hoodie Community and other contributors | http://hood.ie/",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hoodiehq/hoodie-task-client/issues"
  },
  "homepage": "https://github.com/hoodiehq/hoodie-task-client#readme",
  "dependencies": {
    "@hoodie/store-client": "^6.0.0"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "gaze-cli": "^0.2.0",
    "istanbul": "^0.4.2",
    "istanbul-coveralls": "^1.0.3",
    "memdown": "^1.1.2",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.0",
    "semantic-release": "^6.3.2",
    "simple-mock": "^0.7.0",
    "standard": "^8.0.0",
    "tap-min": "^1.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.4.0",
    "uglify-js": "^2.6.1"
  },
  "version": "0.0.0-development"
}
